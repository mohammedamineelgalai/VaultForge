<Window x:Class="XnrgyEngineeringAutomationTools.Modules.ConfigUnite.Views.ConfigUniteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:controls="clr-namespace:XnrgyEngineeringAutomationTools.Modules.ConfigUnite.Controls"
        xmlns:local="clr-namespace:XnrgyEngineeringAutomationTools.Modules.ConfigUnite.Views"
        mc:Ignorable="d"
        Title="{DynamicResource WindowTitleConfigUnite}" 
        Height="900" Width="1400"
        MinHeight="650" MinWidth="1000"
        WindowStartupLocation="CenterOwner"
        WindowState="Maximized"
        Background="#1E1E2E">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Styles/XnrgyStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- BooleanToVisibilityConverter -->
            <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>

            <!-- Inverse Boolean Converter -->
            <local:InverseBooleanConverter x:Key="InverseBoolConverter"/>

            <!-- Multi Boolean AND Converter -->
            <local:MultiBooleanAndConverter x:Key="MultiBoolAnd"/>

            <!-- Style ComboBox moderne EDITABLE (thÃ¨me noir/bleu marine) -->
            <Style x:Key="ConfigComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#4A7FBF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="IsEditable" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="Border" Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="30"/>
                                    </Grid.ColumnDefinitions>
                                    <!-- TextBox pour saisie en mode IsEditable=True -->
                                    <TextBox x:Name="PART_EditableTextBox" Grid.Column="0" 
                                             Margin="2,0,0,0" Padding="8,6"
                                             Background="Transparent" Foreground="White"
                                             BorderThickness="0" FontSize="12"
                                             IsReadOnly="{TemplateBinding IsReadOnly}"
                                             VerticalAlignment="Center" VerticalContentAlignment="Center"
                                             HorizontalAlignment="Stretch"
                                             CaretBrush="White"/>
                                    <ToggleButton Grid.Column="1" x:Name="ToggleButton" 
                                                  Background="Transparent" BorderThickness="0"
                                                  IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                  ClickMode="Press" Focusable="False">
                                        <Path Fill="White" Data="M0,0 L4,4 L8,0 Z" 
                                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </ToggleButton>
                                    <Popup x:Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" 
                                           AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                        <Border x:Name="DropDownBorder" Background="#2D2D44" 
                                                BorderBrush="#0078D4" BorderThickness="2" CornerRadius="4"
                                                MinWidth="{TemplateBinding ActualWidth}" MaxHeight="300">
                                            <ScrollViewer>
                                                <StackPanel IsItemsHost="True"/>
                                            </ScrollViewer>
                                        </Border>
                                    </Popup>
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#0078D4"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#00D4FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Style ComboBoxItem pour les items du dropdown -->
        <Style x:Key="ConfigComboBoxItem" TargetType="ComboBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3D3D56"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#0078D4"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Styles TabControl et TabItem - N'existent pas dans XnrgyStyles.xaml, dÃ©finis localement -->
        <Style x:Key="ModernTabControl" TargetType="TabControl">
            <Setter Property="Background" Value="#1E1E2E"/>
            <Setter Property="BorderBrush" Value="#4A7FBF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="2"/>
        </Style>
        
        <!-- TabItem Principal avec Glow Hover Effect -->
        <Style x:Key="ModernTabItem" TargetType="TabItem">
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" 
                                BorderBrush="#4A7FBF" BorderThickness="2,2,2,0"
                                CornerRadius="8,8,0,0" Padding="{TemplateBinding Padding}">
                            <ContentPresenter ContentSource="Header" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#0078D4"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#00D4FF"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="Border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#00D4FF" BlurRadius="15" ShadowDepth="0" Opacity="0.6"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#00BFFF"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#00FFFF"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="Border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#00FFFF" BlurRadius="25" ShadowDepth="0" Opacity="0.9"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- SubTabItem avec Glow Hover Effect -->
        <Style x:Key="SubTabItem" TargetType="TabItem">
            <Setter Property="Background" Value="#252536"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" 
                                BorderBrush="#3D3D56" BorderThickness="1,1,1,0"
                                CornerRadius="4,4,0,0" Padding="{TemplateBinding Padding}">
                            <ContentPresenter ContentSource="Header" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#0078D4"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#00D4FF"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter TargetName="Border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#00D4FF" BlurRadius="12" ShadowDepth="0" Opacity="0.5"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#00BFFF"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#00FFFF"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="Border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#00FFFF" BlurRadius="25" ShadowDepth="0" Opacity="0.9"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Style pour TabControl de sous-niveau -->
        <Style x:Key="SubTabControl" TargetType="TabControl">
            <Setter Property="Background" Value="#1A1A2E"/>
            <Setter Property="BorderBrush" Value="#3D3D56"/>
            <Setter Property="BorderThickness" Value="0,1,0,0"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!-- BOUTONS AVEC EFFET HOVER GLOW BRILLANT - Identique au PrimaryButton      -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        
        <!-- Bouton Vert (Nouveau) avec Hover Glow Brillant -->
        <Style x:Key="GreenGlowButton" TargetType="Button">
            <Setter Property="Background" Value="#2E7D32"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#4CAF50"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="6" Padding="{TemplateBinding Padding}"
                                BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#66BB6A"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#A5D6A7"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#A5D6A7" BlurRadius="25" ShadowDepth="0" Opacity="0.9"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1B5E20"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Bouton Bleu (Charger) avec Hover Glow Brillant -->
        <Style x:Key="BlueGlowButton" TargetType="Button">
            <Setter Property="Background" Value="#1565C0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#42A5F5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="6" Padding="{TemplateBinding Padding}"
                                BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#42A5F5"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#90CAF9"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#90CAF9" BlurRadius="25" ShadowDepth="0" Opacity="0.9"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0D47A1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Bouton Refresh (Appliquer) avec Hover Glow Brillant -->
        <Style x:Key="RefreshGlowButton" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#4A7FBF"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="6" Padding="{TemplateBinding Padding}"
                                BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#00BFFF"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#00FFFF"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#00FFFF" BlurRadius="25" ShadowDepth="0" Opacity="0.9"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#005A9E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Style pour label avec info tooltip (paramÃ¨tre Inventor) -->
        <Style x:Key="InfoLabel" TargetType="TextBlock" BasedOn="{StaticResource ModernLabel}">
            <Setter Property="Cursor" Value="Help"/>
        </Style>
        
        <!-- DataTemplate pour afficher un label avec un petit â„¹ï¸ info -->
        <DataTemplate x:Key="LabelWithInfoTemplate">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Label}" Style="{StaticResource ModernLabel}"/>
                <TextBlock Text=" â„¹" FontSize="10" Foreground="#64B5F6" Cursor="Help" 
                           ToolTipService.InitialShowDelay="200"
                           ToolTipService.ShowDuration="30000">
                    <TextBlock.ToolTip>
                        <ToolTip Background="#1E1E2E" BorderBrush="#4A7FBF" BorderThickness="1" Padding="10">
                            <StackPanel>
                                <TextBlock Text="Inventor Parameter:" FontWeight="Bold" Foreground="#FFB74D" Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding Parameter}" Foreground="#90CAF9" FontFamily="Consolas"/>
                            </StackPanel>
                        </ToolTip>
                    </TextBlock.ToolTip>
                </TextBlock>
            </StackPanel>
        </DataTemplate>
        
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!-- STYLES UNIFIÃ‰S POUR TOOLTIPS INVENTOR - XNRGY Engineering Standard -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        
        <!-- Style pour l'indicateur â„¹ info -->
        <Style x:Key="InventorInfoIndicator" TargetType="TextBlock">
            <Setter Property="Text" Value=" â„¹"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="#64B5F6"/>
            <Setter Property="Cursor" Value="Help"/>
            <Setter Property="Margin" Value="4,0,0,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>
        
        <!-- DataTemplate pour Tooltips Inventor stylisÃ©s -->
        <DataTemplate x:Key="InventorToolTipTemplate">
            <Border Background="#1E1E2E" BorderBrush="#4A7FBF" BorderThickness="1" 
                    CornerRadius="6" Padding="12" MaxWidth="400">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="ðŸ“‹" FontSize="14" Margin="0,0,6,0"/>
                        <TextBlock Text="Inventor Parameter" FontWeight="SemiBold" 
                                   Foreground="#FFB74D" FontSize="12"/>
                    </StackPanel>
                    <Border Background="#252535" CornerRadius="4" Padding="8">
                        <TextBlock Text="{Binding}" Foreground="#90CAF9" 
                                   FontFamily="Consolas" FontSize="11" TextWrapping="Wrap"/>
                    </Border>
                </StackPanel>
            </Border>
        </DataTemplate>
        
        <!-- Style pour les labels de champs avec indicateur info -->
        <Style x:Key="FieldLabelWithInfo" TargetType="StackPanel">
            <Setter Property="Orientation" Value="Horizontal"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,8,0,0"/>
        </Style>
        
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!-- STYLE DATEPICKER MODERNE - Theme XNRGY (copie de CreateModuleWindow)   -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Style x:Key="DatePickerTextBox" TargetType="DatePickerTextBox">
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DatePickerTextBox">
                        <TextBox x:Name="PART_TextBox" Text="{Binding Path=Text, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Background="Transparent" BorderThickness="0" Foreground="#E0E0E0"
                                 VerticalContentAlignment="Center" HorizontalContentAlignment="Left"
                                 Padding="8,6" FontSize="12" CaretBrush="White"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="ModernDatePicker" TargetType="DatePicker">
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#4A7FBF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="SelectedDateFormat" Value="Short"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DatePicker">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="36"/>
                                </Grid.ColumnDefinitions>
                                <!-- Zone de texte pour la date -->
                                <DatePickerTextBox x:Name="PART_TextBox" Grid.Column="0" 
                                                   Style="{StaticResource DatePickerTextBox}"
                                                   VerticalAlignment="Center"/>
                                <!-- Bouton calendrier avec icone visible -->
                                <Button x:Name="PART_Button" Grid.Column="1" 
                                        Background="Transparent" BorderThickness="0"
                                        Cursor="Hand" Padding="6" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <Path Data="M19,19H5V8H19M16,1V3H8V1H6V3H5C3.89,3 3,3.89 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5C21,3.89 20.1,3 19,3H18V1M17,12H12V17H17V12Z" 
                                          Fill="White" Stretch="Uniform" Width="18" Height="18"/>
                                </Button>
                                <!-- Popup avec Calendar -->
                                <Popup x:Name="PART_Popup" StaysOpen="False" 
                                       PlacementTarget="{Binding ElementName=Border}" Placement="Bottom"
                                       AllowsTransparency="True">
                                    <Border Background="#1E1E2E" BorderBrush="#4A7FBF" BorderThickness="2" CornerRadius="8" Padding="5">
                                        <Calendar x:Name="PART_Calendar" 
                                                  Background="#1E1E2E" Foreground="White" BorderThickness="0"/>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#0078D4"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#00D4FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!-- STYLE COMBOBOX COMPACT POUR DATAGRID - Theme XNRGY sombre               -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Style x:Key="DataGridComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#4A7FBF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="Border" Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="3">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="20"/>
                                    </Grid.ColumnDefinitions>
                                    <ContentPresenter Grid.Column="0" Margin="6,2" 
                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                      VerticalAlignment="Center"/>
                                    <ToggleButton Grid.Column="1" x:Name="ToggleButton" 
                                                  Background="Transparent" BorderThickness="0"
                                                  IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
