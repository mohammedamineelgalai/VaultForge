<Window x:Class="XnrgyEngineeringAutomationTools.Modules.CreateModule.Views.ModuleConfigReaderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Module Configuration Reader - ConfigUnite Data" 
        Height="750" Width="1100"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E2E">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Styles/XnrgyStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Style ComboBox pour selection module -->
            <Style x:Key="ModuleComboBox" TargetType="ComboBox">
                <Setter Property="Background" Value="#2D2D44"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderBrush" Value="#0078D4"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="Padding" Value="12,10"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ComboBox">
                            <Grid>
                                <Border x:Name="Border" Background="{TemplateBinding Background}" 
                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                        BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="35"/>
                                        </Grid.ColumnDefinitions>
                                        <ContentPresenter Grid.Column="0" Margin="12,8" 
                                                          Content="{TemplateBinding SelectionBoxItem}"
                                                          ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                          VerticalAlignment="Center"/>
                                        <ToggleButton Grid.Column="1" x:Name="ToggleButton" 
                                                      Background="Transparent" BorderThickness="0"
                                                      IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                      ClickMode="Press">
                                            <Path Fill="#90CAF9" Data="M0,0 L5,5 L10,0 Z" 
                                                  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </ToggleButton>
                                        <Popup x:Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" 
                                               AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                            <Border x:Name="DropDownBorder" Background="#2D2D44" 
                                                    BorderBrush="#0078D4" BorderThickness="2" CornerRadius="6"
                                                    MinWidth="{TemplateBinding ActualWidth}" MaxHeight="350">
                                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                                    <StackPanel IsItemsHost="True"/>
                                                </ScrollViewer>
                                            </Border>
                                        </Popup>
                                    </Grid>
                                </Border>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Border" Property="BorderBrush" Value="#00D4FF"/>
                                    <Setter TargetName="Border" Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect Color="#0078D4" BlurRadius="8" ShadowDepth="0" Opacity="0.4"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Setter Property="ItemContainerStyle">
                    <Setter.Value>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Background" Value="#2D2D44"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Padding" Value="12,10"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="FontSize" Value="13"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#3D3D56"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#0078D4"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- Header -->
            <RowDefinition Height="Auto"/>  <!-- Module Selector -->
            <RowDefinition Height="*"/>     <!-- Configuration Display -->
            <RowDefinition Height="Auto"/>  <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- ============================================ -->
        <!-- HEADER -->
        <!-- ============================================ -->
        <Border Grid.Row="0" Background="#2A4A6F" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="[Module Config Reader]" FontSize="18" FontWeight="Bold" 
                               Foreground="#90CAF9" VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Lire les configurations de ConfigUnite" FontSize="13" 
                               Foreground="#CCCCCC" VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Border Background="#1A3A2A" CornerRadius="4" Padding="12,6">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Config:" Foreground="#888888" FontSize="11" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock x:Name="TxtConfigStatus" Text="Non charge" Foreground="#FFB74D" FontSize="11" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ============================================ -->
        <!-- MODULE SELECTOR -->
        <!-- ============================================ -->
        <Border Grid.Row="1" Background="#252536" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Selectionner Module:" FontSize="14" FontWeight="SemiBold" 
                               Foreground="White" VerticalAlignment="Center" Margin="0,0,15,0"/>
                </StackPanel>
                
                <ComboBox Grid.Column="1" x:Name="CmbModuleSelector" 
                          Style="{StaticResource ModuleComboBox}"
                          SelectionChanged="CmbModuleSelector_SelectionChanged"
                          Margin="0,0,20,0">
                    <ComboBoxItem Content="-- Selectionner un module --" IsSelected="True"/>
                </ComboBox>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button x:Name="BtnLoadConfig" Content="Charger ConfigUnite" 
                            Style="{StaticResource PrimaryButton}" Padding="15,10"
                            Click="BtnLoadConfig_Click" Margin="0,0,10,0"/>
                    <Button x:Name="BtnRefresh" Content="Rafraichir" 
                            Style="{StaticResource SecondaryButton}" Padding="15,10"
                            Click="BtnRefresh_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ============================================ -->
        <!-- CONFIGURATION DISPLAY -->
        <!-- ============================================ -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel>
                <!-- Message quand aucun module selectionne -->
                <Border x:Name="PanelNoSelection" Background="#2D2D44" CornerRadius="8" Padding="40" 
                        HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,50,0,0">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Aucun module selectionne" FontSize="18" Foreground="#666666" 
                                   HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="1. Cliquez 'Charger ConfigUnite' pour charger le fichier JSON" 
                                   FontSize="12" Foreground="#555555" HorizontalAlignment="Center"/>
                        <TextBlock Text="2. Selectionnez un module dans la liste deroulante" 
                                   FontSize="12" Foreground="#555555" HorizontalAlignment="Center"/>
                        <TextBlock Text="3. Les configurations seront affichees automatiquement" 
                                   FontSize="12" Foreground="#555555" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- Configuration du module selectionne -->
                <StackPanel x:Name="PanelModuleConfig" Visibility="Collapsed">
                    
                    <!-- GroupBox: Module Dimensions -->
                    <GroupBox Header="Module Dimensions" Style="{StaticResource ModernGroupBox}" Margin="0,0,0,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <StackPanel Grid.Column="0" Grid.Row="0" Margin="10">
                                <TextBlock Text="Height (in)" Style="{StaticResource ModernLabel}"/>
                                <TextBox x:Name="TxtHeight" Style="{StaticResource ModernTextBox}" IsReadOnly="True"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Grid.Row="0" Margin="10">
                                <TextBlock Text="Width (in)" Style="{StaticResource ModernLabel}"/>
                                <TextBox x:Name="TxtWidth" Style="{StaticResource ModernTextBox}" IsReadOnly="True"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2" Grid.Row="0" Margin="10">
                                <TextBlock Text="Length (in)" Style="{StaticResource ModernLabel}"/>
                                <TextBox x:Name="TxtLength" Style="{StaticResource ModernTextBox}" IsReadOnly="True"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="0" Grid.Row="1" Margin="10">
                                <TextBlock Text="Module Number" Style="{StaticResource ModernLabel}"/>
                                <TextBox x:Name="TxtModuleNumber" Style="{StaticResource ModernTextBox}" IsReadOnly="True"/>
                            </StackPanel>
                        </Grid>
                    </GroupBox>
                    
                    <!-- GroupBox: Stacked & Tunnel Configuration -->
                    <GroupBox Header="Stacked and Tunnel Configuration" Style="{StaticResource ModernGroupBox}" Margin="0,0,0,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Margin="10">
                                <TextBlock Text="Stacked Position" Style="{StaticResource ModernLabel}"/>
                                <TextBox x:Name="TxtStackedPosition" Style="{StaticResource ModernTextBox}" IsReadOnly="True"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Margin="10">
                                <TextBlock Text="Tunnel AirFlow" Style="{StaticResource ModernLabel}"/>
                                <TextBox x:Name="TxtTunnelAirFlow" Style="{StaticResource ModernTextBox}" IsReadOnly="True"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2" Margin="10">
                                <TextBlock Text="Tunnel Type" Style="{StaticResource ModernLabel}"/>
                                <TextBox x:Name="TxtTunnelType" Style="{StaticResource ModernTextBox}" IsReadOnly="True"/>
                            </StackPanel>
                        </Grid>
                    </GroupBox>
                    
                    <!-- GroupBox: Interior Walls - Left/Right (Parallel) -->
                    <GroupBox Header="Interior Walls - Left/Right (Parallel to Width)" Style="{StaticResource ModernGroupBox}" Margin="0,0,0,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- IW Left -->
                            <Border Grid.Column="0" Background="#252536" CornerRadius="6" Padding="15" Margin="5">
                                <StackPanel>
                                    <TextBlock Text="IW LEFT (Top on Visualizer)" FontWeight="Bold" Foreground="#64B5F6" Margin="0,0,0,10"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                            <TextBlock Text="Active" Style="{StaticResource ModernLabel}"/>
                                            <CheckBox x:Name="ChkIWLeftActive" IsEnabled="False"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1" Margin="0,0,10,0">
                                            <TextBlock Text="Distance (in)" Style="{StaticResource ModernLabel}"/>
                                            <TextBox x:Name="TxtIWLeftDistance" Style="{StaticResource ModernTextBox}" IsReadOnly="True"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="Thickness (in)" Style="{StaticResource ModernLabel}"/>
                                            <TextBox x:Name="TxtIWLeftThickness" Style="{StaticResource ModernTextBox}" IsReadOnly="True"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Border>
                            
                            <!-- IW Right -->
                            <Border Grid.Column="1" Background="#252536" CornerRadius="6" Padding="15" Margin="5">
                                <StackPanel>
                                    <TextBlock Text="IW RIGHT (Bottom on Visualizer)" FontWeight="Bold" Foreground="#FFB74D" Margin="0,0,0,10"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                            <TextBlock Text="Active" Style="{StaticResource ModernLabel}"/>
                                            <CheckBox x:Name="ChkIWRightActive" IsEnabled="False"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1" Margin="0,0,10,0">
                                            <TextBlock Text="Distance (in)" Style="{StaticResource ModernLabel}"/>
                                            <TextBox x:Name="TxtIWRightDistance" Style="{StaticResource ModernTextBox}" IsReadOnly="True"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="Thickness (in)" Style="{StaticResource ModernLabel}"/>
                                            <TextBox x:Name="TxtIWRightThickness" Style="{StaticResource ModernTextBox}" IsReadOnly="True"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </GroupBox>
                    
                    <!-- GroupBox: Interior Walls - Front/Back (Parallel) -->
                    <GroupBox Header="Interior Walls - Front/Back (Parallel to Length)" Style="{StaticResource ModernGroupBox}" Margin="0,0,0,15">
                        <Border Background="#252536" CornerRadius="6" Padding="15" Margin="5">
                            <StackPanel>
                                <TextBlock Text="IW FRONT/BACK (Vertical on Visualizer)" FontWeight="Bold" Foreground="#E57373" Margin="0,0,0,10"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                        <TextBlock Text="Active" Style="{StaticResource ModernLabel}"/>
                                        <CheckBox x:Name="ChkIWFBActive" IsEnabled="False"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Margin="0,0,10,0">
                                        <TextBlock Text="Distance from Front (in)" Style="{StaticResource ModernLabel}"/>
                                        <TextBox x:Name="TxtIWFBDistance" Style="{StaticResource ModernTextBox}" IsReadOnly="True"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="Thickness (in)" Style="{StaticResource ModernLabel}"/>
                                        <TextBox x:Name="TxtIWFBThickness" Style="{StaticResource ModernTextBox}" IsReadOnly="True"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </GroupBox>
                    
                    <!-- Info: Ce formulaire est en lecture seule -->
                    <Border Background="#1A3A2A" CornerRadius="6" Padding="15" Margin="0,10,0,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="[i]" FontSize="12" Foreground="#00B894" FontWeight="Bold" Margin="0,0,8,0"/>
                            <TextBlock Text="Ce formulaire affiche les configurations en LECTURE SEULE depuis ConfigUnite. " 
                                       Foreground="#888888" FontSize="11"/>
                            <TextBlock Text="Les modifications doivent etre faites dans ConfigUnite." 
                                       Foreground="#00B894" FontSize="11" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- ============================================ -->
        <!-- FOOTER -->
        <!-- ============================================ -->
        <Border Grid.Row="3" Background="#252536" Padding="20,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock x:Name="TxtStatus" Text="Pret" Foreground="#888888" FontSize="11" VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="BtnOpenConfigUnite" Content="Ouvrir ConfigUnite" 
                            Style="{StaticResource SecondaryButton}" Padding="15,8"
                            Click="BtnOpenConfigUnite_Click" Margin="0,0,10,0"/>
                    <Button x:Name="BtnClose" Content="Fermer" 
                            Style="{StaticResource SecondaryButton}" Padding="20,8"
                            Click="BtnClose_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
